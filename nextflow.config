docker {
	enabled = true
	temp = 'auto'
	runOptions = '-u $(id -u):$(id -g)'
}

profiles {
	standard {
		process.executor	=	'local'
		process.cpu		=	8
		process.memory		=	'16 GB'
	}

	hpc {
		process.executor	=	'local'
		process.cpu		=	32
		process.memory		=	'128 GB'
	}

}

params {

  ref_genome = "${PWD}/reference/ref_genome.fasta"
  
}